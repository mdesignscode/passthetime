// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Fruit {
  id           Int        @id
  name         String
  family       String
  order        String
  genus        String
  nutritions   Nutritions @relation(fields: [nutritionsId], references: [id])
  nutritionsId Int
}

model Nutritions {
  id            Int @id @default(autoincrement())
  calories      Int
  fat           Int
  sugar         Int
  carbohydrates Int
  protein       Int

  Fruit Fruit[]
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  poems Poem[]
}

model Poem {
  id       Int     @id @default(autoincrement())
  title    String
  lines    String
  Author   Author? @relation(fields: [authorId], references: [id])
  authorId Int?
}

model RockPaperScissor {
  id             Int            @id @default(autoincrement())
  name           String
  winningMatches WinningMatch[]
}

model WinningMatch {
  id                 Int               @id @default(autoincrement())
  name               String
  action             String
  RockPaperScissor   RockPaperScissor? @relation(fields: [rockPaperScissorId], references: [id])
  rockPaperScissorId Int?
}

// schema.prisma

model Recipe {
  id           Int      @id @default(autoincrement())
  name         String
  category     String
  area         String
  instructions String
  thumbnail    String
  tags         String?
  youtubeUrl   String?
  source       String?

  ingredients  Ingredient[]
  measurements Measurement[]
}

model Ingredient {
  id    Int    @id @default(autoincrement())
  name  String
  recipeId Int
  recipe Recipe @relation(fields: [recipeId], references: [id])
}

model Measurement {
  id    Int    @id @default(autoincrement())
  name  String
  recipeId Int
  recipe Recipe @relation(fields: [recipeId], references: [id])
}
